<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .section-title { margin-top: 30px; margin-bottom: 20px; }
    .top-course img { width: 100%; border-radius: 10px; }
  </style>
</head>
<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
    <a class="navbar-brand" href="#">IQMath Dashboard</a>
    <div class="ms-auto d-flex gap-2">
      <a class="btn btn-outline-light" href="javascript:history.back()">‚Üê Back</a>
      <a class="btn btn-success" href="/course-creation">+ Create New Course</a>
    </div>
  </nav>

  <div class="container py-5">
    <h2 class="section-title">üèÜ Top Performing Course</h2>
    <% if (topCourse) { %>
      <div class="card top-course shadow-sm mb-4">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= topCourse.image_url %>" alt="<%= topCourse.title %>">
          </div>
          <div class="col-md-8 p-4">
            <h4><%= topCourse.title %></h4>
            <p><%= topCourse.description %></p>
            <ul>
              <li><strong>Rating:</strong> ‚≠ê <%= topCourse.rating %></li>
              <li><strong>Price:</strong> ‚Çπ<%= topCourse.price %> (Original: ‚Çπ<%= topCourse.original_price %>)</li>
              <li><strong>Category:</strong> <%= topCourse.category %></li>
            </ul>
          </div>
        </div>
      </div>
    <% } else { %>
      <p>No top-rated course yet.</p>
    <% } %>

    <h2 class="section-title">üìä Enrollment Analysis</h2>
<div class="row g-4">
  <div class="col-md-6">
    <div class="chart-card">
      <h5 class="text-center">Bar Chart</h5>
      <canvas id="enrollmentChart" height="200"></canvas>
    </div>
  </div>
  <div class="col-md-6">
    <div class="chart-card">
      <h5 class="text-center">Pie Chart</h5>
      <canvas id="enrollmentPieChart" height="200"></canvas>
    </div>
  </div>
</div>


    <h2 class="section-title">üìö Your Created Courses</h2>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Rating</th>
          <th>Price</th>
          <th>Enrolled Users</th>
        </tr>
      </thead>
      <tbody>
        <% enrollStats.forEach(course => { %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.category %></td>
            <td>‚≠ê <%= course.rating %></td>
            <td>‚Çπ<%= course.price %></td>
            <td><%= course.enrollment_count %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    const labels = JSON.parse(`<%- JSON.stringify(enrollStats.map(c => c.title)) %>`);
    const enrollments = JSON.parse(`<%- JSON.stringify(enrollStats.map(c => c.enrollment_count)) %>`);

    // Bar Chart
    const ctx = document.getElementById('enrollmentChart').getContext('2d');
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [{
          label: 'Enrollments',
          data: enrollments,
          backgroundColor: 'rgba(54, 162, 235, 0.7)',
          borderColor: 'rgba(54, 162, 235, 1)',
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });

    // Pie Chart
    const pieCtx = document.getElementById('enrollmentPieChart').getContext('2d');
    new Chart(pieCtx, {
      type: 'pie',
      data: {
        labels: labels,
        datasets: [{
          label: 'Enrollments',
          data: enrollments,
          backgroundColor: [
            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40', '#C9CBCF'
          ]
        }]
      },
      options: {
        responsive: true
      }
    });
  </script>

</body>
</html>
